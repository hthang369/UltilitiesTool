<dx:ThemedWindow
    x:Class="SQLTool.Views.BasePopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:SQLTool.Views"
    Title="{Binding Header}"
    x:Name="frmPopup"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <dx:LoadingDecorator x:Name="waitLoadView" Grid.Row="0">
            <Views:PopupView />
        </dx:LoadingDecorator>
    </Grid>
</dx:ThemedWindow>
