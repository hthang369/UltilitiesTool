<dx:ThemedWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    x:Class="SQLTool.Views.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="PopupWindow" Height="150" Width="600"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitle" Grid.Row="0" />
        <dxe:TextEdit Grid.Row="1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <dx:SimpleButton Content="OK" />
            <dx:SimpleButton Content="Cancel" />
        </StackPanel>
    </Grid>
</dx:ThemedWindow>
